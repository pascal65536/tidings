<?xml version="1.0" encoding="UTF-8"?>
{% load i18n %}
{% for post in object_list %}
<item turbo="true">
    <title>{{ post.title }}</title>
    <link>{{ host }}{{ post.url }}</link>
    <description>{{ post.lead }}</description>
    {% language 'en' %}
    <pubDate>{{ post.date_post|date:'r' }}</pubDate>
    {% endlanguage %}
        <turbo:content>
            <header>
                <figure>
                    <img src="{{ host }}{{ media }}{{ post.photo.picture }}" />
                </figure>
            </header>
            {% autoescape off %}
            {{ post.text }}
            {% endautoescape %}
            <button formaction="{{ host }}{{ post.url }}" data-background-color="#5B97B0" data-color="white" data-primary="true">Оригинал статьи</button>
      </turbo:content>
</item>
{% endfor %}
